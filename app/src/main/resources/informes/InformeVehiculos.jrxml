<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="InformeVehiculos" pageWidth="595" pageHeight="842" columnWidth="535"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <property name="ireport.zoom" value="1.0"/>
    <property name="ireport.x" value="0"/>
    <property name="ireport.y" value="0"/>

    <!-- Parámetros del informe -->
    <parameter name="P_ESTADO" class="java.lang.String">
        <defaultValueExpression><![CDATA["%"]]></defaultValueExpression>
    </parameter>

    <parameter name="P_MARCA" class="java.lang.String">
        <defaultValueExpression><![CDATA["%"]]></defaultValueExpression>
    </parameter>

    <parameter name="P_ANIO_MIN" class="java.lang.Integer">
        <defaultValueExpression><![CDATA[1900]]></defaultValueExpression>
    </parameter>

    <parameter name="P_ANIO_MAX" class="java.lang.Integer">
        <defaultValueExpression><![CDATA[2100]]></defaultValueExpression>
    </parameter>

    <!-- Consulta SQL con parámetros -->
    <queryString>
        <![CDATA[SELECT
            id_vehiculo as idVehiculo,
            matricula,
            marca,
            modelo,
            anio,
            color,
            DATE_FORMAT(fecha_entrada, '%d/%m/%Y') as fechaEntrada,
            estado,
            precio_compra as precioCompra,
            kilometraje,
            ubicacion_gps as ubicacionGps,
            observaciones
        FROM VEHICULOS
        WHERE estado LIKE $P{P_ESTADO}
          AND marca LIKE $P{P_MARCA}
          AND anio BETWEEN $P{P_ANIO_MIN} AND $P{P_ANIO_MAX}
        ORDER BY fecha_entrada DESC, marca, modelo]]>
    </queryString>

    <!-- Campos del informe -->
    <field name="idVehiculo" class="java.lang.Integer"/>
    <field name="matricula" class="java.lang.String"/>
    <field name="marca" class="java.lang.String"/>
    <field name="modelo" class="java.lang.String"/>
    <field name="anio" class="java.lang.Integer"/>
    <field name="color" class="java.lang.String"/>
    <field name="fechaEntrada" class="java.lang.String"/>
    <field name="estado" class="java.lang.String"/>
    <field name="precioCompra" class="java.lang.Double"/>
    <field name="kilometraje" class="java.lang.Integer"/>
    <field name="ubicacionGps" class="java.lang.String"/>
    <field name="observaciones" class="java.lang.String"/>

    <!-- Variables -->
    <variable name="TotalVehiculos" class="java.lang.Integer" calculation="Count">
        <variableExpression><![CDATA[$F{idVehiculo}]]></variableExpression>
    </variable>

    <variable name="InversionTotal" class="java.lang.Double" calculation="Sum">
        <variableExpression><![CDATA[$F{precioCompra}]]></variableExpression>
    </variable>

    <variable name="PrecioPromedio" class="java.lang.Double" calculation="Average">
        <variableExpression><![CDATA[$F{precioCompra}]]></variableExpression>
    </variable>

    <!-- Título del informe -->
    <title>
        <band height="120" splitType="Stretch">
            <staticText>
                <reportElement x="0" y="0" width="555" height="35"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="24" isBold="true"/>
                </textElement>
                <text><![CDATA[INVENTARIO DE VEHÍCULOS - AUTOCICLO]]></text>
            </staticText>

            <staticText>
                <reportElement x="0" y="40" width="100" height="15"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Filtros aplicados:]]></text>
            </staticText>

            <!-- Mostrar filtros aplicados -->
            <textField isBlankWhenNull="true">
                <reportElement x="0" y="55" width="270" height="15">
                    <printWhenExpression><![CDATA[!$P{P_ESTADO}.equals("%")]]></printWhenExpression>
                </reportElement>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["• Estado: " + $P{P_ESTADO}]]></textFieldExpression>
            </textField>

            <textField isBlankWhenNull="true">
                <reportElement x="0" y="70" width="270" height="15">
                    <printWhenExpression><![CDATA[!$P{P_MARCA}.equals("%")]]></printWhenExpression>
                </reportElement>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["• Marca: " + $P{P_MARCA}]]></textFieldExpression>
            </textField>

            <textField isBlankWhenNull="true">
                <reportElement x="0" y="85" width="270" height="15">
                    <printWhenExpression><![CDATA[$P{P_ANIO_MIN} > 1900 || $P{P_ANIO_MAX} < 2100]]></printWhenExpression>
                </reportElement>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["• Años: " + $P{P_ANIO_MIN} + " - " + $P{P_ANIO_MAX}]]></textFieldExpression>
            </textField>

            <textField pattern="dd/MM/yyyy HH:mm">
                <reportElement x="400" y="55" width="155" height="20"/>
                <textElement textAlignment="Right">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[new java.util.Date()]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="300" y="55" width="100" height="20"/>
                <textElement textAlignment="Right">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Fecha de emisión:]]></text>
            </staticText>

            <line>
                <reportElement x="0" y="115" width="555" height="1"/>
            </line>
        </band>
    </title>

    <!-- Encabezado de columnas -->
    <columnHeader>
        <band height="30" splitType="Stretch">
            <staticText>
                <reportElement mode="Opaque" x="0" y="0" width="70" height="30" forecolor="#FFFFFF" backcolor="#4A90E2"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true" isUnderline="false"/>
                </textElement>
                <text><![CDATA[Matrícula]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="70" y="0" width="80" height="30" forecolor="#FFFFFF" backcolor="#4A90E2"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Marca]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="150" y="0" width="90" height="30" forecolor="#FFFFFF" backcolor="#4A90E2"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Modelo]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="240" y="0" width="40" height="30" forecolor="#FFFFFF" backcolor="#4A90E2"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Año]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="280" y="0" width="75" height="30" forecolor="#FFFFFF" backcolor="#4A90E2"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Fecha Entrada]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="355" y="0" width="70" height="30" forecolor="#FFFFFF" backcolor="#4A90E2"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Estado]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="425" y="0" width="65" height="30" forecolor="#FFFFFF" backcolor="#4A90E2"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Precio (€)]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="490" y="0" width="65" height="30" forecolor="#FFFFFF" backcolor="#4A90E2"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Km]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- Detalle (cada fila de datos) -->
    <detail>
        <band height="25" splitType="Stretch">
            <textField>
                <reportElement x="0" y="0" width="70" height="25"/>
                <box leftPadding="3">
                    <pen lineWidth="0.5"/>
                </box>
                <textElement verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{matricula}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="70" y="0" width="80" height="25"/>
                <box leftPadding="3">
                    <pen lineWidth="0.5"/>
                </box>
                <textElement verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{marca}]]></textFieldExpression>
            </textField>

            <textField isStretchWithOverflow="true">
                <reportElement x="150" y="0" width="90" height="25"/>
                <box leftPadding="3">
                    <pen lineWidth="0.5"/>
                </box>
                <textElement verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{modelo}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="240" y="0" width="40" height="25"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{anio}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="280" y="0" width="75" height="25"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{fechaEntrada}]]></textFieldExpression>
            </textField>

            <!-- Estado con color condicional - COMPLETO (verde) -->
            <textField>
                <reportElement mode="Opaque" x="355" y="0" width="70" height="25" backcolor="#4CAF50" forecolor="#FFFFFF">
                    <printWhenExpression><![CDATA[$F{estado}.equals("completo")]]></printWhenExpression>
                </reportElement>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{estado}.toUpperCase()]]></textFieldExpression>
            </textField>

            <!-- Estado DESGUAZANDO (naranja) -->
            <textField>
                <reportElement mode="Opaque" x="355" y="0" width="70" height="25" backcolor="#FFA726" forecolor="#FFFFFF">
                    <printWhenExpression><![CDATA[$F{estado}.equals("desguazando")]]></printWhenExpression>
                </reportElement>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{estado}.toUpperCase()]]></textFieldExpression>
            </textField>

            <!-- Estado DESGUAZADO (rojo) -->
            <textField>
                <reportElement mode="Opaque" x="355" y="0" width="70" height="25" backcolor="#E57373" forecolor="#FFFFFF">
                    <printWhenExpression><![CDATA[$F{estado}.equals("desguazado")]]></printWhenExpression>
                </reportElement>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{estado}.toUpperCase()]]></textFieldExpression>
            </textField>

            <!-- Estado por defecto para cualquier otro valor -->
            <textField>
                <reportElement x="355" y="0" width="70" height="25">
                    <printWhenExpression><![CDATA[!$F{estado}.equals("completo") && !$F{estado}.equals("desguazando") && !$F{estado}.equals("desguazado")]]></printWhenExpression>
                </reportElement>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{estado}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="425" y="0" width="65" height="25"/>
                <box rightPadding="3">
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{precioCompra}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0">
                <reportElement x="490" y="0" width="65" height="25"/>
                <box rightPadding="3">
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{kilometraje}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <!-- Pie de página -->
    <pageFooter>
        <band height="30" splitType="Stretch">
            <textField>
                <reportElement x="400" y="10" width="100" height="20"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER} + " de"]]></textFieldExpression>
            </textField>
            <textField evaluationTime="Report">
                <reportElement x="500" y="10" width="55" height="20"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[" " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
            <line>
                <reportElement x="0" y="5" width="555" height="1"/>
            </line>
        </band>
    </pageFooter>

    <!-- Resumen final -->
    <summary>
        <band height="95" splitType="Stretch">
            <rectangle>
                <reportElement x="0" y="10" width="555" height="75" backcolor="#F5F5F5"/>
            </rectangle>

            <staticText>
                <reportElement x="20" y="20" width="200" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="11" isBold="true"/>
                </textElement>
                <text><![CDATA[Total de vehículos:]]></text>
            </staticText>
            <textField>
                <reportElement x="220" y="20" width="100" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="11"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{TotalVehiculos}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="20" y="40" width="200" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="11" isBold="true"/>
                </textElement>
                <text><![CDATA[Inversión total:]]></text>
            </staticText>
            <textField pattern="#,##0.00 €">
                <reportElement x="220" y="40" width="100" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="11"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{InversionTotal}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="20" y="60" width="200" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="11" isBold="true"/>
                </textElement>
                <text><![CDATA[Precio promedio:]]></text>
            </staticText>
            <textField pattern="#,##0.00 €">
                <reportElement x="220" y="60" width="100" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="11"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{PrecioPromedio}]]></textFieldExpression>
            </textField>
        </band>
    </summary>
</jasperReport>
