<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.effect.BoxBlur?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.autociclo.controllers.PantallaDeCargaController"
           prefHeight="750.0" prefWidth="1150.0"
           stylesheets="@../css/pantallacarga.css">

   <ImageView fitHeight="750.0" fitWidth="1150.0" preserveRatio="false">
      <image>
         <Image url="@../images/pantalla_carga_background.png" />
      </image>
      <effect>
         <BoxBlur width="8" height="8" iterations="3"/>
      </effect>
   </ImageView>

   <VBox alignment="CENTER" spacing="30">
      <ProgressIndicator
             fx:id="loadingSpinner"
             prefWidth="80.0"
             prefHeight="80.0"
             styleClass="custom-progress"/>

      <Label
             fx:id="loadingText"
             text="Cargando AutoCiclo..."
             styleClass="loading-text"
             style="-fx-font-size: 24px;
                    -fx-font-weight: bold;
                    -fx-text-fill: white;
                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0, 2, 2);"/>

      <Label
             fx:id="statusText"
             text="Inicializando sistema..."
             styleClass="status-text"
             style="-fx-font-size: 14px;
                    -fx-text-fill: rgba(255, 255, 255, 0.9);"/>

      <Label
             fx:id="versionText"
             text="VersiÃ³n 1.0.0"
             styleClass="version-text"
             style="-fx-font-size: 12px;
                    -fx-text-fill: rgba(255, 255, 255, 0.7);">
         <VBox.margin>
            <Insets top="-8" />
         </VBox.margin>
      </Label>

   </VBox>

</StackPane>
